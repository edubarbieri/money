{
    "compilerOptions": {
        "jsx": "react",
        "target": "esnext",
        "allowSyntheticDefaultImports": true,
        "checkJs": true,
        "baseUrl": "./",
        "paths": {
            "components/*": ["./components/*"],
            "pages/*": ["./pages/*"],
            "store/*": ["./redux/*"],
            "service/*": ["./service/*"],
            "i18n/*": ["./i18n/*"],
            "sass/*": ["./styles/sass/*"],
            "app/*": ["./*"],
            "mymoney-sdk": ["../../mymoney-sdk/src/index.js"]
        },
        "module": "commonjs",
        "esModuleInterop": true
    },
    "exclude": [
        "node_modules",
        "**/node_modules/*"
    ]
}